@page
@model LoginModel
@{
    ViewData["Title"] = "ChatEvents";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Описание события</title>
    <!-- Подключение Bootstrap 5 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.2/css/bootstrap.min.css">
</head>
<body>




  @*  <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>*@
    <!-- Custom JS -->
    <script src="script.js"></script>



    <div class="container">
        <div class="row">
            <div class="col-md-4 border-end">
                <h3 class="mb-4">События</h3>
                <ul class="list-group">
                    <li class="list-group-item active mb-2">Событие 1. Участников: 3</li>
                    <li class="list-group-item mb-2">Событие 2</li>
                    <li class="list-group-item mb-2">Событие 3</li>
                    <li class="list-group-item mb-2">Событие 4</li>
                </ul>
            </div>
            <div class="col-md-8">
                <h3 class="mb-4">Чат</h3>
                <div class="chat-box p-3 mb-4 border">
                    <div class="message mb-3">
                        <p class="sender mb-2">Пользователь 1:</p>
                        <p class="text">Привет! Как дела?</p>
                    </div>
                    <div class="message mb-3">
                        <p class="sender mb-2">Пользователь 2:</p>
                        <p class="text">I'm good, thanks for asking. How about you?</p>
                    </div>
                    <div class="message mb-3">
                        <p class="sender mb-2">Пользователь 3:</p>
                        <p class="text">I'm doing well too, thanks.</p>
                    </div>
                </div>
                <form class="message-form">
                    <div class="form-group mb-4">
                        <textarea class="form-control" placeholder="Type your message here"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Send</button>
                </form>
            </div>
        </div>
    </div>

   @* <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>*@
    <!-- Custom JS -->
    <script src="script.js"></script>




</body>
</html>
