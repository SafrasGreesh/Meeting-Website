    <div class="container">
        <div class="row align-items-center">
            <div class="col-5 mx-0">
                <div class="sidebar">
                    <main class="d-flex flex-wrap">
                        <div class="b-example-divider b-example-vr"></div>

                        <div class="d-flex flex-column flex-shrink-0 p-3 bg-body-tertiary" style="width: 175px;">
                            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                                <svg class="bi pe-none me-2" width="40" height="32"><use xlink:href="#bootstrap" /></svg>
                                <span class="fs-4">Sidebar</span>
                            </a>
                            <hr>
                            <ul class="nav nav-pills flex-column mb-auto">
                                <li class="nav-item">
                                    <a href="#" class="nav-link active" aria-current="page">
                           
                                        <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#home" /></svg>
                                        Home
                                    </a>
                                </li>
                                <li>
                                    <a href="/ChoisePeople" class="nav-link link-body-emphasis">
                                        <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#ChoisePeople" /></svg>
                                        Анкеты
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="nav-link link-body-emphasis">
                                        <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#table" /></svg>
